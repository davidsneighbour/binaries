{
	"name": "@davidsneighbour/hugo-bin",
	"version": "0.2024.0",
	"description": "Bash scripts that are used across @davidsneighbour projects.",
	"scripts": {
		"release": "commit-and-tag-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" --sign && ./bin/repo/release/postrelease",
		"release:major": "commit-and-tag-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" --sign && ./bin/repo/release/postrelease",
		"release:minor": "commit-and-tag-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" --sign && ./bin/repo/release/postrelease"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/davidsneighbour/hugo-bin.git"
	},
	"author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/davidsneighbour/hugo-bin/issues"
	},
	"homepage": "https://github.com/davidsneighbour/hugo-bin#readme",
	"devDependencies": {
		"@davidsneighbour/configurations": "5.9.7"
	}
}
